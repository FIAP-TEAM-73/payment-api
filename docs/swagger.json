{
    "swagger": "2.0",
    "info": {
        "version": "1.0.0",
        "title": "Paymnet API",
        "description": "API de pagamentos",
        "license": {
            "name": "MIT",
            "url": "https://opensource.org/license/MIT"
        }
    },
    "basePath": "/api/v1/",
    "tags": [
        {
            "name": "Pagamento",
            "description": "API respons√°vel por gerenciar pagamentos"
        }
    ],
    "schemes": [
        "http",
        "https"
    ],
    "consumes": [
        "application/json"
    ],
    "paths": {
        "/payment/order/{orderId}": {
            "get": {
                "tags": [
                    "Pagamento"
                ],
                "summary": "Check Order Payment Status",
                "operationId": "checkOrderPaymentStatus",
                "parameters": [
                    {
                        "name": "orderId",
                        "in": "path",
                        "required": true,
                        "schema": {
                            "type": "string",
                            "format": "uuid",
                            "example": "e5c79516-aec7-468d-a802-a8cee929ad9f"
                        }
                    }
                ],
                "responses": {
                    "200": {
                        "description": "Payment found",
                        "schema": {
                            "type": "object",
                            "properties": {
                                "id": {
                                    "type": "string",
                                    "format": "uuid",
                                    "example": "64289576-f81e-4339-a0c9-84416e5c5518"
                                },
                                "orderId": {
                                    "type": "string",
                                    "format": "uuid",
                                    "example": "64289576-f81e-4339-a0c9-84416e5c5518"
                                },
                                "value": {
                                    "type": "number",
                                    "example": "84.95"
                                },
                                "status": {
                                    "type": "string",
                                    "example": "PAYMENT_REFUSED"
                                }
                            }
                        }
                    },
                    "404": {
                        "description": "Not Found",
                        "schema": {
                            "type": "object",
                            "properties": {
                                "friendlyMessage": {
                                    "type": "string",
                                    "example": "Fail while trying to access GET - /payment/{paymentId}"
                                },
                                "errorMessage": {
                                    "type": "string",
                                    "example": "Payment does not exist"
                                }
                            }
                        }
                    },
                    "500": {
                        "description": "Internal Server Error",
                        "schema": {
                            "type": "object",
                            "properties": {
                                "friendlyMessage": {
                                    "type": "string",
                                    "example": "Fail while trying to access GET - /payment/{paymentId}"
                                },
                                "errorMessage": {
                                    "type": "string",
                                    "example": "Unkown error!"
                                }
                            }
                        }
                    }
                }
            }
        },
        "/payment/hook": {
            "post": {
                "tags": [
                    "Pagamento"
                ],
                "summary": "Atualizar status do pagamento",
                "operationId": "paymentWebHook",
                "parameters": [
                    {
                        "name": "paymentWebHook",
                        "in": "body",
                        "description": "Payment object that needs to be updated",
                        "required": true,
                        "schema": {
                            "type": "object",
                            "properties": {
                                "issueId": {
                                    "type": "string",
                                    "format": "uuid",
                                    "example": "bf32fb00-7bb2-481d-86ca-336dc5af1d4e"
                                },
                                "status": {
                                    "type": "string",
                                    "example": "approved"
                                }
                            },
                            "required": [
                                "issueId",
                                "status"
                            ]
                        }
                    }
                ],
                "responses": {
                    "204": {
                        "description": "Payment status updated successfully"
                    },
                    "400": {
                        "description": "Bad Request",
                        "schema": {
                            "type": "object",
                            "properties": {
                                "friendlyMessage": {
                                    "type": "string",
                                    "example": "Fail while trying to access POST - /payment/webhook"
                                },
                                "errorMessage": {
                                    "type": "string",
                                    "example": "Payment is already approved"
                                }
                            }
                        }
                    },
                    "500": {
                        "description": "Internal Server Error",
                        "schema": {
                            "type": "object",
                            "properties": {
                                "friendlyMessage": {
                                    "type": "string",
                                    "example": "Fail while trying to access POST - /payment/webhook"
                                },
                                "errorMessage": {
                                    "type": "string",
                                    "example": "Unkown error!"
                                }
                            }
                        }
                    }
                }
            }
        }
    }
}